{
    "buildpacks": [
      {
        "url": "heroku/nodejs"
      }
    ],
    "environments": {
      "production": {
        "NPM_CONFIG_PRODUCTION": false
      }
    },
    "defaultConfig": {
      "web": "npm run start",
      "build": {
        "budgets": [
          {
            "type": "initial",
            "maximumWarning": "1mb",
            "maximumError": "1.5mb"
          }
        ]
      }
    }
  }
  